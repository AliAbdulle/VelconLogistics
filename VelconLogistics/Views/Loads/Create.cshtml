@model VelconLogistics.Models.LoadViewModel.LoadCreateViewModels
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Load</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          
            <div class="form-group">
                <label asp-for="Load.Amount" class="control-label"></label>
                <input asp-for="Load.Amount" class="form-control" />
                <span asp-validation-for="Load.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Load.PickupDate" class="control-label"></label>
                <input asp-for="Load.PickupDate" class="form-control" />
                <span asp-validation-for="Load.PickupDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Load.DeliverdDate" class="control-label"></label>
                <input asp-for="Load.DeliverdDate" class="form-control" />
                <span asp-validation-for="Load.DeliverdDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Load.Location" class="control-label"></label>
                <input asp-for="Load.Location" class="form-control" />
                <span asp-validation-for="Load.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Load.DriverId" class="control-label"></label>
                <select asp-for="Load.DriverId" class="form-control" asp-items="Model.AvailableOption"></select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Load.IsDeliverd" /> @Html.DisplayNameFor(model => model.Load.IsDeliverd)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
